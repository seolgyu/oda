<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hs.mapper.admin.MemberMapper">
	<!-- 검색 키워드  -->
	<sql id="where-list">
		<if test="schType == 'user_id' ">
			INSTR(user_id, #{kwd}) &gt; 0
		</if>
		<if test="schType == 'user_nickname' ">
			DBMS_LOB.INSTR(user_nickname, #{kwd}) &gt; 0 
		</if>
		<if test="schType == 'user_email' ">
			INSTR(user_email, #{kwd}) &gt; 0
		</if>
		<if test="schType == 'user_created_date' ">
			(( TO_CHAR(user_created_date, 'YYYY-MM-DD') = #{kwd}
				OR TO_CHAR(user_created_date, 'YYYYMMDD') = #{kwd} ) OR
			( TO_CHAR(user_created_date, 'YYYY-MM-DD') = #{kwd}
				OR TO_CHAR(user_created_date, 'YYYYMMDD') = #{kwd} ))
		</if>
	</sql>
	
	<sql id="state-condition">
      <choose>
         <when test="state == '정상'">
            AND user_status = 1
         </when>
         <when test="state == '신고'">
            AND user_status = 2
         </when>
         <when test="state == '휴면'">
            AND user_status = 3
         </when>
         <when test="state == '정지'">
            AND user_status = 4
         </when>
         <when test="state == '휴면대상자'">
            <!-- 휴면 대상자: 최근 로그인이 1년 이상 지난 경우 -->
            AND user_updated_date &lt; ADD_MONTHS(SYSDATE, -12)
            AND user_status = 1
         </when>
         <when test="state == '신고대상자'">
            <!-- 신고 대상자: 신고 횟수가 많은 경우 등 조건 추가 -->
            AND user_status = 2
         </when>
      </choose>
   </sql>
	<select id="memberList" resultType="com.hs.model.admin.MemberDTO">
		select user_nickname,
            user_id,
            user_profile, 
            user_email,
            user_created_date,
            user_updated_date,
            CASE 
            WHEN user_status = 0 THEN '에러' 
            WHEN user_status = 1 THEN '정상'
            WHEN user_status = 2 THEN '신고'
            WHEN user_status = 3 THEN '휴면'
            WHEN user_status = 4 THEN '정지'
            ELSE '관리자에게 문의하세요.'
        END AS user_status
	    FROM member
	    <where>
	    	<if test="kwd != null and kwd != ''">
				AND <include refid="where-list"/>
			</if>
			<if test="state != null and state != '' and state != 'null'">
				<include refid="state-condition"/>
			</if>	
	    	AND user_level &lt; 90
	    </where>
	    ORDER BY 
	    CASE 
	        WHEN REGEXP_LIKE(user_nickname, '^[가-힣]') THEN 1
	        WHEN REGEXP_LIKE(user_nickname, '^[A-Za-z]') THEN 2
	        ELSE 3
	    END DESC,
	    user_nickname DESC
	    OFFSET #{offset} ROWS FETCH FIRST #{size} ROWS ONLY
	</select>
	
	<select id="userCount" parameterType="map" resultType="Integer">
		select NVL(COUNT(*), 0) user_Count
	    FROM member
	    <where>
	    	<if test="kwd != null and kwd != ''">
				AND <include refid="where-list"/>
			</if>
			<if test="state != null and state != '' and state != 'null'">
				<include refid="state-condition"/>
			</if>	
	    	AND user_level &lt; 90
	    </where>
	</select>
	
	<update id="updateMemberStatus" parameterType="map">
    UPDATE member SET 
        user_status = #{status},
        user_updated_date = SYSDATE
    WHERE user_id IN
    <foreach collection="memberIds" item="id" open="(" separator="," close=")">
        #{id}
    </foreach>
	</update>
	
	<select id="memberInfo" resultType="com.hs.model.admin.MemberDTO">
		select
            user_email
	    FROM member
	    WHERE user_id = #{user_id}
	</select>
</mapper>